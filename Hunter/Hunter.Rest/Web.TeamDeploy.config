<?xml version="1.0" encoding="utf-8"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <appSettings>
    <add key="FilesRootPath" value="C:\HunterFiles\" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="basePath" value="/hunter/" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <!--set  to '/' if you host it in the root context-->
    <add key="useExternalAuth" value="true" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
    <add key="externalAuthUrl" value="http://team.binary-studio.com/auth/" xdt:Transform="Replace" xdt:Locator="Match(key)"/>
  </appSettings>
  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
  </system.web>
</configuration>