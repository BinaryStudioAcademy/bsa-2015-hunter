    <base href="@Config.BasePath" />
    <title>@ViewBag.Title</title>
    <link href="~/fonts/FontAwesome.otf" rel="MIME" />
    <link href="~/fonts/fontawesome-webfont.eot" rel="MIME" />
    <link href="~/fonts/fontawesome-webfont.svg" rel="MIME" />
