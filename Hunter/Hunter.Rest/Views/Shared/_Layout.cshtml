    <link type="text/css" rel="stylesheet" href="~/Content/hrInterview.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/hrSpecialNote.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/candidate.css" />

    <script src='~/bower_components/angular/angular.js'></script>
    <script type="text/javascript">
        window.globalVars = { baseUrl: '@Config.BasePath' };
    </script>

    @RenderSection("css", false)
</head>
<body ng-controller="IndexController as IndexCtrl" id="wrapper">
    <!--TODO uncoment to load header-->
    <header id="header"></header>

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="./">Home</a>
            </li>
            <li>
                <a href="./vacancy/list">
                    <i class="fa fa-archive icon-button"></i>
                    Vacancies
                </a>
            </li>
            <li>
                <a href="./candidate/list">
                    <i class="fa fa-users icon-button"></i>
                    Candidates
                </a>
            </li>
            <li ng-model="radioModel" btn-radio="'Settings'" class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" role="button">
                    <i class="fa fa-wrench icon-button"></i>
                    Settings<span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="./pool">Pools</a></li>
                    <li><a href="./user">Users</a></li>
                </ul>
            </li>
            <li ng-model="radioModel" btn-radio="'Notifications'">
                <a href="./notifications">
                    <i title="Notifications" class="fa fa-comments icon-button"></i>
                    Notifications
                </a>
            </li>
            <li ng-model="radioModel" btn-radio="'Tests'">
                <a href="./tests">
                    <i title="Tests for check" class="fa fa-check-square icon-button"></i>
                    Tests
                    <span class="badge" ng-cloak ng-show="IndexCtrl.countTests > 0">{{IndexCtrl.countTests}}</span>
                </a>
            </li>
            <li ng-model="radioModel" btn-radio="'Activity'">
                <a href="./activity">
                    <i title="Activity" class="fa fa-bell icon-button"></i>
                    Activity
                    <span class="badge" ng-cloak ng-show="IndexCtrl.amount != 0">{{IndexCtrl.amount}}</span>
                </a>
            </li>
        </ul>
    </div>
